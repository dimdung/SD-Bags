<property> 
	<name>dfs.datanode.data.dir.perm</name> 
	  	<value>700</value> 
	  	</property>

<property> 
  	<name>dfs.datanode.address</name> 
  	  	<value>192.168.1.72:1004</value> 
  	  	</property>

<property> 
  	<name>dfs.datanode.http.address</name> 
  	  	<value>192.168.1.72:1006</value> 
  	  	</property>

