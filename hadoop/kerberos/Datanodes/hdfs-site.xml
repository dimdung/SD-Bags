  	<name>dfs.datanode.keytab.file</name> 
  		<value>/usr/local/hadoop/conf/dn.service.keytab</value> <!-- path to the HDFS keytab --> 
</property> 


<property> 
	<name>dfs.datanode.kerberos.principal</name> 
		<value>dn/_HOST@CLUSTER1.COM</value> 
		</property>

